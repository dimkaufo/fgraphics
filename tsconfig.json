{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,

    "outDir" : "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src_old"
  ],
  "include": [
    "src/**/*"
  ],
  "files": [
    "typings/tsd.d.ts"
  ]
}